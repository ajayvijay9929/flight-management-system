    <script>
    function validatePasswords() {
        var password = document.getElementById("password");
        var confirmPassword = document.getElementById("cpassword");
           if (password !== confirmPassword) {
        	event.preventDefault();
            alert("Passwords do not match!");
            return false;
        }
         return true;
    }
    </script>

	
